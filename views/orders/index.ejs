<section class="card">
  <div class="h1">Meine Bestellungen</div>
  <p class="p">Hier siehst du deine letzten Bestellungen.</p>

  <% if (!orders || !orders.length) { %>
    <div class="hint">Noch keine Bestellungen.</div>
  <% } else { %>
    <div class="form" style="gap:10px;">
      <% orders.forEach(o => { %>
        <div class="card" style="padding:14px;">
          <div style="display:flex;justify-content:space-between;gap:12px;align-items:center;">
            <div>
              <div style="font-weight:900;">Bestellung #<%= o.id %></div>
              <div class="muted" style="font-size:13px;">Datum: <%= o.created_at %></div>
            </div>
            <div class="muted" style="font-weight:800;text-transform:capitalize;">
              <%= o.status.replace('_',' ') %>
            </div>
          </div>
          <% if (o.notes) { %>
            <div class="hint"><%= o.notes %></div>
          <% } %>
        </div>
      <% }) %>
    </div>
  <% } %>
</section>
